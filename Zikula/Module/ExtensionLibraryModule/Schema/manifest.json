{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Manifest",
    "description" : "Zikula Extension Library manifest",
    "type": "object",
    "properties": {
        "vendor": {
            "description": "Properties describing the extension vendor.",
            "type": "object",
            "properties": {
                "title": {"type": "string"},
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "logo": {
                    "type": "string",
                    "format": "uri"
                },
                "owner": {
                    "type": "object",
                    "properties": {
                        "name": {"type": "string"},
                        "email": {
                            "type": "string",
                            "format": "email"
                        },
                        "url": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": ["name"]
                }
            }
        },
        "extension": {
            "description": "Properties describing the extension.",
            "type": "object",
            "properties": {
                "title": {"type": "string"},
                "type": {
                    "type": "string",
                    "maxLength": 1,
                    "pattern": "^[mtp]$"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "icon": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": ["title", "type"]
        },
        "version": {
            "description": "Properties describing this version of the extension.",
            "type": "object",
            "properties": {
                "semver": {"type": "string"},
                "compatibility": {"type": "string"},
                "licenses": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {"type": "string"},
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "description": {"type": "string"},
                "keywords": {
                    "type": "array",
                    "items": {"type": "string"},
                    "uniqueItems": true
                },
                "urls": {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "string",
                            "format": "uri"
                        },
                        "docs": {
                            "type": "string",
                            "format": "uri"
                        },
                        "demo": {
                            "type": "string",
                            "format": "uri"
                        },
                        "download": {
                            "type": "string",
                            "format": "uri"
                        },
                        "issues": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                },
                "contributors": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {"type": "string"},
                            "email": {
                                "type": "string",
                                "format": "email"
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    },
                    "uniqueItems": true
                },
                "dependencies": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "maxLength": 1,
                                "pattern": "^[mtp]$"
                            },
                            "name": {"type": "string"},
                            "version": {"type": "string"}
                        }
                    },
                    "uniqueItems": true
                }
            },
            "required": ["semver", "compatibility", "licenses"]
        }
    },
    "required": ["extension", "version"]
}